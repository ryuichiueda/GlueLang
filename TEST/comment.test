#!/bin/bash 

tmp=/tmp/$$
scr=$(basename $0)
cd $(dirname $0) || exit 1

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

#########################################
# TEST1: whole line comments
#########################################

cat << FIN > $tmp-glue
#this is a comment
#あいうえお



/bin/echo 'That\'s OK'
FIN

cat << FIN > $tmp-out
That's OK
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST1.1 error"

diff $tmp-{out,ans}
ERROR_CHECK "TEST1.2 error"

#########################################
# TEST2: comment at right of code
#########################################

cat << FIN > $tmp-glue
/bin/echo 'That\'s OK'
FIN

cat << FIN > $tmp-out
That's OK
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST2.1 error"

diff $tmp-{out,ans}
ERROR_CHECK "TEST2.2 error"

rm -f $tmp-*
