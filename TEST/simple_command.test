#!/bin/bash 

tmp=/tmp/$$
scr=$(basename $0)

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

#########################################
# TEST1: cat
#########################################
cat << FIN > $tmp-in
a
b
c
FIN

cat << FIN > $tmp-out
a
b
c
That's OK
FIN

cat << FIN > $tmp-glue
/bin/cat '$tmp-in'



/bin/echo 'That\'s OK'
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST1.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST1.2 error"

#########################################
# TEST2: invalid character in the command name
#########################################

cat << FIN > $tmp-glue
/bin/ca?t '/etc/passwd'
FIN

../glue $tmp-glue > /dev/null
[ "$?" = 1 ]
ERROR_CHECK "TEST2 error"

#########################################
# TEST3: non-existent command
#########################################

cat << 'FIN' > $tmp-glue
/bin/caaaaaaaaaaaaaaaaaaaaaaat '/etc/passwd'
FIN

cat << FIN > $tmp-ans
ERROR: exec() failed: No such file or directory
Failed to execute command: /bin/caaaaaaaaaaaaaaaaaaaaaaat /etc/passwd 
FIN

../glue $tmp-glue > /dev/null 2> $tmp-out
[ "$?" == 127 ]
ERROR_CHECK "TEST3.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST1.2 error"

#########################################
# TEST4: execution of two commands 
#########################################

cat << FIN > $tmp-glue
/bin/date
/bin/date
FIN

[ "$(../glue $tmp-glue | wc -l | tr -d ' ')" = 2 ] 
ERROR_CHECK "TEST4 error"

#########################################
# TEST5: mv to commit
#########################################
cat << FIN > $tmp-in
aa
bb
FIN

cat << FIN > $tmp-out
aa
bb
FIN

cat << FIN > $tmp-glue
file f = /bin/cat '$tmp-in'
/bin/mv f '$tmp-ans'
FIN

../glue $tmp-glue
ERROR_CHECK "TEST5.1 error"

[ -e "$tmp-ans" ]
ERROR_CHECK "TEST5.2 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST5.3 error"

rm -f $tmp-*
