#!/bin/bash

tmp=/tmp/$$
scr=$(basename $0)
cd $(dirname $0) || exit 1

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

os=linux
[ "$(uname)" != "Linux" ] && os=mac


#########################################
# TEST1: two commands
#########################################
cat << FIN > $tmp-out
5
4
3
2
1
FIN

cat << FIN > $tmp-linux
/usr/bin/seq '1' '5' >>= /usr/bin/tac

FIN

cat << FIN > $tmp-mac
/usr/bin/seq '1' '5' >>= /usr/bin/tail '-r'

FIN

../glue $tmp-$os > $tmp-ans
ERROR_CHECK "TEST1.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST1.2 error"

#########################################
# TEST2: three commands
#########################################
cat << FIN > $tmp-out
1
2
3
4
5
FIN

cat << FIN > $tmp-linux
/usr/bin/seq '1' '5' >>=
/usr/bin/tac >>=
/usr/bin/tac

FIN

cat << FIN > $tmp-mac
/usr/bin/jot '5' >>=
/usr/bin/tail '-r' >>=
/usr/bin/tail '-r'


FIN

../glue $tmp-$os > $tmp-ans
ERROR_CHECK "TEST2.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST2.2 error"

#########################################
# TEST3: with output file
#########################################
cat << FIN > $tmp-out
1
2
3
4
5
FIN

cat << FIN > $tmp-linux
file aaa = /usr/bin/seq '1' '5' >>=
/usr/bin/tac >>=
/usr/bin/tac

/bin/cat aaa
FIN

cat << FIN > $tmp-mac
file aaa = /usr/bin/jot '5' >>=
/usr/bin/tail '-r' >>=
/usr/bin/tail '-r'

/bin/cat aaa
FIN

../glue $tmp-$os > $tmp-ans
ERROR_CHECK "TEST3.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST3.2 error"

rm -f $tmp-*
