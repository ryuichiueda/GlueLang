#!/bin/bash 

tmp=/tmp/$$
scr=$(basename $0)
cd $(dirname $0) || exit 1

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

#########################################
# TEST1: blank after import
#########################################

cat << FIN > $tmp-glue
import /bin/ as b
    
b.echo 'That\'s OK'
FIN

cat << FIN > $tmp-out
That's OK
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST1 error"

#########################################
# TEST2: blank in proc
#########################################

cat << FIN > $tmp-glue
proc p =
  /bin/echo 'a'

  /bin/echo 'b'
    
this.p
FIN

cat << FIN > $tmp-out
a
b
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST2.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST2.2 error"

rm -f $tmp-*
