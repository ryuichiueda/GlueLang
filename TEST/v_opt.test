#!/bin/bash 

tmp=/tmp/$$
scr=$(basename $0)

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

