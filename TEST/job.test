#!/bin/bash

tmp=/tmp/$$
scr=$(basename $0)
cd $(dirname $0) || exit 1

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

os=linux
[ "$(uname)" != "Linux" ] && os=mac


#########################################
# TEST1: with file
#########################################
cat << FIN > $tmp-out

a
b
c
FIN

cat << FIN > $tmp-glue
file f  = /bin/echo 'a' >> /bin/echo 'b' >> /bin/echo 'c'
/bin/echo ''
/bin/cat f
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST1.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST1.2 error"

#########################################
# TEST2: with str 
#########################################
cat << FIN > $tmp-out

a
b
c
FIN

cat << FIN > $tmp-glue
str s  = /bin/echo 'a' >> /bin/echo 'b' >> /bin/echo 'c'
/bin/echo ''
/bin/echo s
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST2.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST2.2 error"

#########################################
# TEST3: indent
#########################################

cat << FIN > $tmp-glue
import PATH

echo 'a' >> echo 'b'
	>> echo 'c'
FIN

cat << FIN > $tmp-out
a
b
c
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST3.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST3.2 error"

#########################################
# TEST4: not connection
#########################################

cat << FIN > $tmp-glue
import PATH

false !> echo 'b' >> echo 'c'
FIN

cat << FIN > $tmp-out
b
c
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST4.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST4.2 error"


cat << FIN > $tmp-glue
import PATH

false !> echo 'b' !> echo 'c'
FIN

cat << FIN > $tmp-out
b
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST4.3 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST4.4 error"

rm -f $tmp-*
