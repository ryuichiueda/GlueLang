#!/bin/bash

tmp=/tmp/$$
scr=$(basename $0)
cd $(dirname $0) || exit 1

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

os=linux
[ "$(uname)" != "Linux" ] && os=mac

#########################################
# TEST1: error cancel
#########################################
cat << FIN > $tmp-in
a
b
c
FIN

cat << FIN > $tmp-out
a
b
c
FIN

cat << FIN > $tmp-linux
/bin/false !> /bin/true
FIN

cat << FIN > $tmp-mac
/usr/bin/false !> /usr/bin/true
FIN

../glue $tmp-$os
ERROR_CHECK "TEST1 error"

#########################################
# TEST2: error cancel (pipeline)
#########################################

cat << FIN > $tmp-out
hoge
FIN

cat << FIN > $tmp-linux
/bin/false >>= /bin/echo 'hoge' !> /bin/true
FIN

cat << FIN > $tmp-mac
/usr/bin/false >>= /bin/echo 'hoge' !> /usr/bin/true
FIN

../glue $tmp-$os > $tmp-ans
ERROR_CHECK "TEST2.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST2.2 error"

#########################################
# TEST3: if then else
#########################################

cat << FIN > $tmp-out
d
d
FIN

cat << FIN > $tmp-glue
import PATH

file x = do
        false
        echo 'a'
        echo 'b'
!> do
        false
        echo 'c'
!> do
        echo 'd'

cat x
cat x
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST3.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST3.2 error"

rm -f $tmp-*
