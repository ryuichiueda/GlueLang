#!/bin/bash 

tmp=/tmp/$$
scr=$(basename $0)
cd $(dirname $0) || exit 1

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

#########################################
# TEST1: multiline variales
#########################################

cat << FIN > $tmp-glue
/bin/echo 'a
b
c'
FIN

cat << FIN > $tmp-out
a
b
c
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST1.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST1.2 error"

#########################################
# TEST2: return at end
#########################################

cat << FIN > $tmp-glue
/bin/echo 'a
b
c
'
FIN

cat << FIN > $tmp-out
a
b
c

FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST2.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST2.2 error"

#########################################
# TEST3: without echo
#########################################

cat << FIN > $tmp-glue
'a
b
c
'
FIN

cat << FIN > $tmp-out
a
b
c

FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST3.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST3.2 error"

rm -f $tmp-*
