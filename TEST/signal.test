#########################################
# TEST5: ignore sigpipe
#########################################

cat << FIN > $tmp-out
y
y
y
FIN

cat << FIN > $tmp-glue
import PATH
yes >>= head -n 3
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST5.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST5.2 error"

rm -f $tmp-*
