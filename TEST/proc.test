#!/bin/bash 

tmp=/tmp/$$
scr=$(basename $0)
cd $(dirname $0) || exit 1

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

os=linux
[ "$(uname)" != "Linux" ] && os=mac

#########################################
# TEST1: one line proc
#########################################

cat << FIN > $tmp-out
HELL
FIN

cat << FIN > $tmp-glue
proc f = /bin/echo 'HELL'

this.f
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST1.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST1.2 error"

#########################################
# TEST2: two line proc
#########################################

cat << FIN > $tmp-out
cba
OK
FIN

cat << 'FIN' > $tmp-glue
proc hoge =
      /bin/echo argv[1] >>= /usr/bin/rev
      /bin/echo 'OK'

this.hoge 'abc'
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST2.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST2.2 error"

rm -f $tmp-*
