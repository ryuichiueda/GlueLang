#!/bin/bash 

tmp=/tmp/$$
scr=$(basename $0)
cd $(dirname $0) || exit 1

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

os=linux
[ "$(uname)" != "Linux" ] && os=mac

#########################################
# TEST1: one line proc
#########################################

cat << FIN > $tmp-out
HELL
FIN

cat << 'FIN' > $tmp-glue
proc hoge = /bin/echo 'HELL'

this.hoge
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST1.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST1.2 error"

rm -f $tmp-*
