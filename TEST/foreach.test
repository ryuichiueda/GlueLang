#!/bin/bash 

tmp=/tmp/$$
scr=$(basename $0)
cd $(dirname $0) || exit 1

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

os=linux
[ "$(uname)" != "Linux" ] && os=mac

#########################################
# TEST1: simple output
#########################################
cat << FIN > $tmp-out
2
4
6
8
10
OK
FIN

cat << 'FIN' > $tmp-glue
import PATH

seq 1 10 >>= xargs -n 2 >>= foreach
  echo argv[2]

echo 'OK'
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST1.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST1.2 error"

#########################################
# TEST2: stop script at error
#########################################
cat << FIN > $tmp-out
1
FIN

cat << 'FIN' > $tmp-glue
import PATH

seq 1 10 >>= foreach
  echo argv[1]
  false

echo 'NG'
FIN

../glue $tmp-glue > $tmp-ans
[ $? -eq 1 ]
ERROR_CHECK "TEST2.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST2.2 error"

rm -f $tmp-*
