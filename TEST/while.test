#!/bin/bash

tmp=/tmp/$$
scr=$(basename $0)
cd $(dirname $0) || exit 1

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

os=linux
[ "$(uname)" != "Linux" ] && os=mac


#########################################
# TEST1: stop by time
#########################################

cat << 'FIN' > $tmp-glue
import PATH

proc f = do
  str tmp = date '+%s' >>= awk '{print $1%3}' 
  echo tmp
  test tmp -ne 0
  
in.while this.f
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST1.1 error"

rm -f $tmp-*
