#!/bin/bash 

tmp=/tmp/$$
scr=$(basename $0)
cd $(dirname $0) || exit 1

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

os=linux
[ "$(uname)" != "Linux" ] && os=mac

#########################################
# TEST1: cat
#########################################

cat << FIN > $tmp-out
9
FIN

cat << 'FIN' > $tmp-glue
import ../stdcom/ as std

/bin/echo 1 >>=
std.loop-serial '/usr/bin/awk' '{print ++$1;if($1==10){exit 1}}'
FIN

../glue $tmp-glue > $tmp-ans
ERROR_CHECK "TEST1.1 error"

diff $tmp-out $tmp-ans
ERROR_CHECK "TEST1.2 error"

rm -f $tmp-*
